#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	
	for(int i=1;i<=t;i++)
	{
	    int N;
	    cin>>N;
	    
	    if(N<=4)
	    {
	        cout<<1<<endl;
	    }
	    else if(N%4==0)
	    {
	        cout<<N/4<<endl;  
	    }
	    else
	    {
	        cout<<(N/4)+1<<endl;
	    }
	}
	return 0;
}
