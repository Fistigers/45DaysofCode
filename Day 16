#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	
	for(int i=1;i<=t;i++){
	    
	int N;
	cin>>N;
	  
	  int jar1 = 1;
	  int jar2 =N-2;
	  int jar3 = 1;
	  
	  cout << jar1 << jar2 << jar3 << endl;
	}
	return 0;
}

