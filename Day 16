////////////// CODE 1////////////////
#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	
	for(int i=1;i<=t;i++){
	    
	    int N,M;
	    cin>>N>>M;
	    
	  
	   
	   if( N%M ==0 && M%2 == 0){
	       cout<<"YES"<<endl;
	   }
	   else{
	       cout<<"NO"<<endl;
	   }
	   
	}
	return 0;
}



